pipeline {
    agent any
    
    environment {
        IMAGE_NAME = 'itworks-backend'
        CONTAINER_NAME = 'itworks-backend'
        
        APP_PORT = '3000'
        HOST_PORT = '3000'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Checking out code from GitHub...'
                checkout scm
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'üî® Building Docker image...'
                    dir('backend') {
                        def imageTag = "${IMAGE_NAME}:${BUILD_NUMBER}"
                        def imageLatest = "${IMAGE_NAME}:latest"
                        
                        sh """
                            docker build -t ${imageTag} -t ${imageLatest} .
                        """
                        
                        echo "‚úÖ Image built: ${imageTag}"
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    echo 'üß™ Running tests...'
                    dir('backend') {
                        echo '‚ö†Ô∏è  Tests skipped (uncomment to enable)'
                    }
                }
            }
        }
        
        stage('Stop Old Container') {
            steps {
                script {
                    echo 'üõë Stopping old container if exists...'
                    sh """
                        docker stop ${CONTAINER_NAME} || true
                        docker rm ${CONTAINER_NAME} || true
                    """
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'backend-env-file', variable: 'ENV_FILE')]) {
                        def envFilePath = sh(
                            script: """
                                cp '${ENV_FILE}' /tmp/backend.env.${BUILD_NUMBER}
                                echo /tmp/backend.env.${BUILD_NUMBER}
                            """,
                            returnStdout: true
                        ).trim()
                        
                        sh """
                            docker run -d \\
                                --name ${CONTAINER_NAME} \\
                                --restart unless-stopped \\
                                -p ${HOST_PORT}:${APP_PORT} \\
                                --env-file ${envFilePath} \\
                                ${IMAGE_NAME}:${BUILD_NUMBER}
                        """
                        
                        sh """
                            rm -f ${envFilePath} || true
                        """
                    }
                }
            }
        }
        
        stage('Health Check') {
            steps {
                script {
                    echo 'üè• Waiting for application to start...'
                    sleep(time: 10, unit: 'SECONDS')
                    
                    sh """
                        if docker ps | grep -q ${CONTAINER_NAME}; then
                            echo "‚úÖ Container is running"
                        else
                            echo "‚ùå Container failed to start"
                            docker logs ${CONTAINER_NAME}
                            exit 1
                        fi
                    """
                    
                    sh """
                        sleep 5
                        curl -f http://localhost:${HOST_PORT}/health || echo "‚ö†Ô∏è  Health check endpoint not available"
                    """
                }
            }
        }
        
        stage('Cleanup') {
            steps {
                script {
                    echo 'üßπ Cleaning up old images...'
                    sh """
                        docker images ${IMAGE_NAME} --format '{{.ID}} {{.Tag}}' | \\
                        grep -v latest | \\
                        sort -k2 -n -r | \\
                        tail -n +6 | \\
                        awk '{print \$1}' | \\
                        xargs -r docker rmi || true
                    """
                }
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
            script {
                sh """
                    docker logs ${CONTAINER_NAME} || true
                """
            }
        }
        always {
            echo 'üìã Pipeline finished'
        }
    }
}